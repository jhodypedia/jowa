<% layout('layout', { title: 'WA Admin', scripts: '<script src="/js/admin.js"></script>' }) %>

<div class="row">
  <div class="col-md-3 mb-3">
    <div class="card sticky-top" style="top:20px;">
      <div class="card-body">
        <h5 class="card-title">Admin Panel</h5>
        <div class="list-group" id="left-menu">
          <a href="#" class="list-group-item list-group-item-action active" data-page="dashboard">Dashboard</a>
          <a href="#" class="list-group-item list-group-item-action" data-page="send">Kirim</a>
          <a href="#" class="list-group-item list-group-item-action" data-page="send-media">Kirim Media</a>
          <a href="#" class="list-group-item list-group-item-action" data-page="contacts">Kontak</a>
          <a href="#" class="list-group-item list-group-item-action" data-page="chats">Chats</a>
          <a href="#" class="list-group-item list-group-item-action" data-page="users">Users</a>
          <a href="#" class="list-group-item list-group-item-action" data-page="logs">Logs</a>
          <a href="#" class="list-group-item list-group-item-action text-danger" id="btn-logout">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <div id="pageArea">
      <!-- content loaded by admin.js -->
      <div class="card p-4">
        <div id="qrContainer" class="text-center">
          <h5>QR Auth</h5>
          <div id="qrBox" class="p-3 border rounded d-inline-block">
            <img id="qrImage" src="" alt="QR" style="max-width:260px; display:none;">
            <pre id="qrRaw" class="small text-muted" style="display:none; max-width:260px; word-break:break-all;"></pre>
          </div>
          <div class="mt-3">
            <button id="btn-refresh-qr" class="btn btn-outline-secondary btn-sm">Refresh QR</button>
            <button id="btn-logout-wa" class="btn btn-danger btn-sm">Force Logout WA</button>
          </div>
          <div id="waState" class="mt-2 text-muted small">Connection: â€”</div>
        </div>
      </div>
    </div>
  </div>
</div>
