<%- include('partials/header') %>

<div class="container py-5">
  <h3>Member Panel</h3>
  <p class="text-muted">Member hanya dapat mengakses fitur yang diizinkan (jika premium).</p>
  <div id="memberContent"></div>
</div>

<% scripts = `<script>
  // simple check and UI
  (async ()=>{
    const token = localStorage.getItem('token');
    if (!token) return window.location.href = '/';
    const r = await fetch('/api/auth/me', { headers:{ Authorization: 'Bearer '+token }});
    const j = await r.json();
    if (!j.ok) return window.location.href = '/';
    document.getElementById('memberContent').innerHTML = j.user.premium ? '<div class="alert alert-success">Anda premium — fitur tersedia</div>' : '<div class="alert alert-warning">Anda bukan premium — tidak ada akses</div>';
  })();
</script>` %>
