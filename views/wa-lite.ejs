<% layout('layout', { title: 'WA Member', scripts: '<script src="/js/member.js"></script>' }) %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card p-3">
      <div class="d-flex justify-content-between align-items-center">
        <h5>Member Panel</h5>
        <button id="btn-logout-lite" class="btn btn-outline-danger btn-sm">Logout</button>
      </div>

      <div id="member-info" class="mt-3 text-muted small"></div>

      <hr />

      <div id="member-send" class="mt-2">
        <h6>Kirim Pesan</h6>
        <form id="member-send-form">
          <input name="jid" class="form-control mb-2" placeholder="628123...@s.whatsapp.net" required>
          <textarea name="text" rows="4" class="form-control mb-2" placeholder="Pesan..." required></textarea>
          <button class="btn btn-primary">Kirim</button>
        </form>
      </div>

      <div id="member-qr" class="mt-3 text-center"></div>
    </div>
  </div>
</div>
